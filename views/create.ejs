<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title>Create Person</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Create New Person</h1>
        
        <% if (errors && errors.length > 0) { %>
            <div class="error-messages">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <form action="/person" method="POST" class="person-form">
            <div class="form-group">
                <label for="name">Name <span class="required">*</span></label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    value="<%= person ? person.name || '' : '' %>"
                    required
                >
            </div>

            <div class="form-group">
                <label for="age">Age <span class="required">*</span></label>
                <input 
                    type="number" 
                    id="age" 
                    name="age" 
                    min="0"
                    value="<%= person ? person.age || '' : '' %>"
                    required
                >
            </div>

            <div class="form-group">
                <label for="gender">Gender <span class="required">*</span></label>
                <select id="gender" name="gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male" <%= person && person.gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= person && person.gender === 'Female' ? 'selected' : '' %>>Female</option>
                    <option value="Other" <%= person && person.gender === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="mobileNumber">Mobile Number <span class="required">*</span></label>
                <input 
                    type="tel" 
                    id="mobileNumber" 
                    name="mobileNumber" 
                    value="<%= person ? person.mobileNumber || '' : '' %>"
                    required
                >
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Create Person</button>
                <a href="/person" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>


